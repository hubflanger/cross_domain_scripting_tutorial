package com.hubflanger.crossdomain {	import flash.text.TextField;		import flash.display.MovieClip;	import flash.system.Security;		public class DomainB extends MovieClip	{		public var myText1:TextField;				public function DomainB()		{			/**			 * this statement makes this movieclip scriptable by any 			 * container swf from another domain			 */			Security.allowDomain("*");		}				public function sayHello( str:String ):void		{			myText1.text = str;		}			}}